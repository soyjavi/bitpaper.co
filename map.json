{
  "signup": {
    "required": ["username"],
    "optional": ["name", "email"]
  },
  "login": {
    "required": ["username", "mnemonic"]
  },
  "search": {
    "optional": ["username"]
  },
  "profile": {
    "secure": true,
    "optional": ["name", "phone", "website", "location", "address", "xpub"]
  },
  "invoice": {
    "secure": true,
    "optional": [
      "id",
      "satoshis", "address",
      "reference", "concept", "issued", "due", "dateFormat", "currency",
      "from", "to",
      "items",
      "terms",
      "state"
    ]
  },
  "transaction": {
    "required": ["invoice"]
  }
}
