{
  "signup": {
    "required": ["email", "username", "password"],
    "optional": ["name"]
  },
  "login": {
    "required": ["username", "password"]
  },
  "profile": {
    "secure": true,
    "optional": ["name", "phone", "website", "location",  "address", "xpub"]
  },
  "invoice": {
    "secure": true,
    "optional": [
      "id",
      "satoshis", "address",
      "reference", "date", "location", "recipient", "products", "terms",
      "state"
    ]
  },
  "transaction": {
    "required": ["address"]
  }
}
